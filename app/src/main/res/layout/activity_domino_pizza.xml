<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DominoPizza">




    <TextView
        android:id="@+id/txtTotalDominoEstimatePrice"
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="568dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTotalDominoQuantity"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="524dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="524dp"
        android:text="@string/TotalQty"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="156dp"
        android:layout_height="29dp"
        android:layout_marginTop="568dp"
        android:text="@string/TotalPrice"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPlaceOrderDominoPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="480dp"
        android:text="@string/Place_Order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReorderDominoPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="480dp"
        android:text="@string/ReOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConfirmOrderDominoPizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="552dp"
        android:text="@string/Confirm_Order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="409dp"
        android:layout_height="422dp"
        android:layout_marginTop="56dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/simplycheese"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPriceSimplyCheese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SimplyCheese"/>

                    <Button
                        android:id="@+id/btnIncreaseSimplyCheese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/increase"/>

                    <Button
                        android:id="@+id/btnDecreaseSimplyCheese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease" />

                    <TextView
                        android:id="@+id/txtQuantitySimplyCheese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/meatasaurus" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPriceMeatSaurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/MeataSaurus" />

                    <Button
                        android:id="@+id/btnIncreaseMeatSaurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/increase"/>

                    <Button
                        android:id="@+id/btnDecreaseMeatSaurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease"/>

                    <TextView
                        android:id="@+id/txtQuantityMeatSaurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/prawnpassion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPricePrawnPassion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PrawnPassion" />

                    <Button
                        android:id="@+id/btnIncreasePrawnPassion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/increase"/>

                    <Button
                        android:id="@+id/btnDecreasePrawnPassion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease"/>

                    <TextView
                        android:id="@+id/txtQuantityPrawnPassion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ultimatehawaiian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPriceUltimateHawaiian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/UltimateHawaiian" />

                    <Button
                        android:id="@+id/btnIncreaseUltimateHawaiian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/increase"/>

                    <Button
                        android:id="@+id/btnDecreaseUltimateHawaiian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease"/>

                    <TextView
                        android:id="@+id/txtQuantityUltimateHawaiian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <Button
                        android:id="@+id/btnConfirmOrderDomino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="292dp"
                        android:layout_marginLeft="292dp"
                        android:layout_marginTop="560dp"
                        android:text="@string/Confirm_Order" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chickenconfidential" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPriceChickenConfidential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ChickenConfidential" />

                    <Button
                        android:id="@+id/btnIncreaseChickenConfidential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/increase"/>

                    <Button
                        android:id="@+id/btnDecreaseChickenConfidential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease"/>

                    <TextView
                        android:id="@+id/txtQuantityChickenConfidential"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/smokybeefandchick" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtPrizeSmokybeefandchick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/SmokyBeefandChick" />

                        <Button
                            android:id="@+id/btnIncreaseSmokybeefandchick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/increase" />

                        <Button
                            android:id="@+id/btnDecreaseSmokybeefandchick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/decrease" />

                        <TextView
                            android:id="@+id/txtQuantitySmokybeefandchick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>